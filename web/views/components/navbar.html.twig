              <li><button type = "button" class=" purge btn btn-info" data-toggle="modal" data-target="#login-modal">Log In</button></li>
              <li>
                <form class="form-group" action="/logout" method="post">
                  <button class="btn btn-success" type="submit">logout</button>
                </form>
                <form class="form-group" action="/users" method="post">
                  <button class="btn btn-default" type="submit">Profile</button>
                </form>
              </li>
          </ul>
        </li>
      </ul>
